<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CameraMain"
    android:orientation="vertical"
    android:id="@+id/a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Rubik&apos;s Cube Solver"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please take the TOP view"
        android:id="@+id/textInstr" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.jiangshen.rubikscube2x2solver.CameraView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
            android:id="@+id/cameraView" />

        <com.example.jiangshen.rubikscube2x2solver.SquareFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/square_framelayout">
            <!-- border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/overlay"
                android:layout_margin="80dp"
                android:id="@+id/box"
                />

            <!-- vertical line -->
            <View
                android:id="@+id/vertical_line"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#0099FF"
                android:layout_gravity="center"
                android:layout_margin="80dp"
                />

            <!-- horizontal line -->
            <View
                android:id="@+id/horizontal_line"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#0099FF"
                android:layout_gravity="center"
                android:layout_margin="80dp"
                />

        </com.example.jiangshen.rubikscube2x2solver.SquareFrameLayout>
    </FrameLayout>

</LinearLayout>
